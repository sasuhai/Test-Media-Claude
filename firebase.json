{
  "functions": {
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**"
    ],
    "rewrites": [
      { "source": "/content.json", "function": "api" },
      { "source": "/api/**", "function": "api" }
    ]
  }
}
